<%- include('../layouts/Uheader'); -%>

    <!-- Header Section End -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" >
            <% for( let i = 0; i < 3; i++ ) { %>
                    <% if(banner[i].title == 'First slide') {%>
                    <div class="carousel-item active">
                        <% }else{ %>
                    <div class="carousel-item">

                            <% } %>
                        <img class="d-block w-100 " src="product_img/<%= banner[i].images[0] %>" alt="<%= banner[i].title %>" style="height: 700px;object-fit: cover;">
                        <div class="carousel-caption d-none d-md-block">
                          <h1 class="text-white fw-bold mb-3"><%= banner[i].description %></h1>
                          <a class="site-btn" href="/shop">SHOP NOW</a>
                        </div>
                    </div>
       
            <% } %>

        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <br>
      <br><br><br><br>
      <h1></h1>
    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="filter__controls">
                        <li class="active" data-filter="*">Best Sellers</li>
                        <li data-filter=".new-arrivals">New Arrivals</li>
                        <li data-filter=".hot-sales">Hot Sales</li>
                    </ul>
                </div>
            </div>
            <div class="row product__filter">
            <% for( let i = 0; i < products.length; i++ ) { %>


                <div class="col-lg-4 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
                    
                    <div class="product__item">
                            <div class="product__item__pic" style="background-image: url('product_img/<%= products[i].images[0] %>');" onclick="productView('<%= products[i]._id %>')">             
                            <span class="label">New</span>
                            <ul class="product__hover">
                                <li><a onclick="addToWishlist('<%= products[i]._id %>')" class='wishlistadd'><img src="img/icon/heart.png" alt=""></a></li>
                                <li><a href="/product-detail?id=<%= products[i]._id %>"><img src="img/icon/search.png" alt=""></i></a></li>
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <a href="/product-detail?id=<%= products[i]._id %>"><h6><%= products[i].title %></h6></a>
                            <!-- <a href="#" class="add-cart">+ Add To Cart</a> -->
                            <!-- <div class="rating">
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                            </div> -->
                            <h5>â‚¹<%= products[i].price %>.00</h5>
                            
                            <!-- <div class="product__color__select"> -->
                                
                                <div class="product__color__select">
                                    <% for (let j = 0; j < products[i].color.length; j++) { %>
                                        <label for="pc-<%= j+1 %>" style="background-color: <%= products[i].color[j] %>;">
                                          <input type="radio" id="pc-<%= i+1 %>-<%= j+1 %>" name="product-color">
                                        </label>
                                      <% } %>
                                </div>
                                <!-- <label class="active black" for="pc-2">
                                    <input type="radio" id="pc-2">
                                </label>
                                <label class="grey" for="pc-3">
                                    <input type="radio" id="pc-3">
                                </label> -->
                            <!-- </div> -->
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </section>
    <!-- Product Section End -->
<!-- Modal -->
